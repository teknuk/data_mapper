{
  "manifest_version": 3,
  "name": "Teknuk DataMapper",
  "version": "1.1.4",
  "description": "Visually map elements on a page to structured data fields and export as JSON, YAML, TOON, XML, or CSV.",
  "permissions": ["storage", "scripting", "activeTab", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Teknuk DataMapper"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script/content-script.js"],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel/index.html", "panel/panel.js", "panel/panel.css"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ]
}
