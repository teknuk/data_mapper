{
  "name": "teknuk-datamapper-extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:panel": "vite build --config vite.panel.config.js --mode production",
    "build:content": "vite build --config vite.content.config.js --mode production",
    "build:background": "vite build --config vite.background.config.js --mode production",
    "build": "rimraf dist && npm-run-all --parallel build:panel build:content build:background && cp -r public/* dist/",
    "dev:background": "vite build --config vite.background.config.js --watch --mode development",
    "dev:content": "vite build --config vite.content.config.js --watch --mode development",
    "dev:panel": "vite build --config vite.panel.config.js --watch --mode development",
    "dev": "rimraf dist && mkdir dist && cp -r public/* dist/ && npm-run-all --parallel dev:panel dev:content dev:background",
    "test": "vitest",
    "test:e2e": "node tests/e2e/datamapper.e2e.js",
    "zip": "cd dist && zip -r tn_datamapper_1_1_.zip ."
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "puppeteer": "^24.31.0",
    "rimraf": "^6.1.2",
    "svelte": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.1",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
