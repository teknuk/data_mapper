{
  "name": "teknuk-datamapper-extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:clean && npm run build:panel && npm run build:scripts",
    "build:clean": "rimraf dist",
    "build:panel": "vite build --config vite.panel.config.js",
    "build:scripts": "vite build --config vite.content.config.js && vite build --config vite.background.config.js",
    "dev": "npm-run-all --parallel dev:panel dev:scripts",
    "dev:panel": "vite build --watch --config vite.panel.config.js",
    "dev:scripts": "npm-run-all --parallel dev:content dev:background",
    "dev:content": "vite build --watch --config vite.content.config.js",
    "dev:background": "vite build --watch --config vite.background.config.js",
    "test": "vitest",
    "test:e2e": "node tests/e2e/datamapper.e2e.js"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "puppeteer": "^24.31.0",
    "rimraf": "^6.1.2",
    "svelte": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
